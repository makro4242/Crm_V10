@model Crm_v10.Models.Kullanicilar

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{ 
   @Html.AntiForgeryToken()
     
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <div class="card-box">
                <h2>Düzenle</h2>
                <h4 class="m-t-0 header-title">
                    <b>KULLANICI BİLGİELRİNİ DÜZENLE</b>
                </h4>
                <input type="hidden" id="sayfa" name="sayfa" value="Kullanicilars" />
                <hr />
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    <div class="form-group">
                        @Html.LabelFor(model => model.KullaniciKodu, htmlAttributes: new { @class = "control-label col-md-4", @required = "" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.KullaniciKodu, new { htmlAttributes = new { @class = "form-control koduTamamla", @maxlength = "5" } })
                            @Html.ValidationMessageFor(model => model.KullaniciKodu, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.KullaniciAdi, htmlAttributes: new { @class = "control-label col-md-4", @required = "" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control", @maxlength = "5" } })
                            @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.KullaniciSifresi, htmlAttributes: new { @class = "control-label col-md-4", @required = "" })
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.KullaniciSifresi, new { htmlAttributes = new { @class = "form-control", @maxlength = "5" } })
                            @Html.ValidationMessageFor(model => model.KullaniciSifresi, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-actions no-color">
                        <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-default" /> |
                       @if (Session["KullaniciID"].ToString() == "0")
                       {
                       @Html.ActionLink("Listeye Dön", "Index")
                       }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}


