@model IEnumerable<Crm_v10.Models.Durum>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row col-sm-10">
        <h2>Durum</h2>
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li>
                    <a href="#">Kartlar</a>
                </li>
                <li>
                    <a href="/Durums/Index">Durum Tanıtım Kartı</a>
                </li>
                <li>
                    <a href="#">Index</a>
                </li>
            </ol>
        </div>
        <p>
            <a href="/Durums/Create" class="btn btn-default waves-effect waves-light">Yeni Kayıt</a>
        </p>

    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">Durum Adı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DurumAdi)
                                        </td>
                                        <td>
                                            <a href="/Durums/Edit/@item.ID" class="btn btn-default waves-effect waves-light" style="font-size:73%">Düzenle</a>
                                            <a href="/Durums/Details/@item.ID" class="btn btn-default waves-effect waves-light" style="font-size:73%">Detay</a>
                                            <a href="/Durums/Delete/@item.ID" class="btn btn-default waves-effect waves-light" style="font-size:73%">Sil</a><br />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
