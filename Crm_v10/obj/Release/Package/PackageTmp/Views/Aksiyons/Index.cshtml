@model IEnumerable<Crm_v10.Models.Aksiyon>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row col-sm-10">
        <h2>Aksiyon</h2>
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li>
                    <a href="#">Evraklar</a>
                </li>
                <li>
                    <a href="/Aksiyons/Index">Aksiyon Tanıtım Kartı</a>
                </li>
                <li>
                    <a href="#">Index</a>
                </li>
            </ol>
        </div>
        <p>
            <a href="/Aksiyons/Create" class="btn btn-default waves-effect waves-light">Yeni Kayıt</a>
        </p>

    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">Tarih</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Saat</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Görev Kodu|Satış Elemanı|Potansiyel Kodu</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Aksiyon</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Aksiyon Not</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 200.4px;">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                       
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tarih)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Saat)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Gorev.ID ) @Html.DisplayFor(modelItem => item.Gorev.SatisElemanlari.SatisElemaniAdiSoyadi) @Html.DisplayFor(modelItem => item.Gorev.Potansiyel.PotansiyelKodu)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => @item.AksiyonSecim.AksiyonAdi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AksiyonNot)
                                        </td>
                                        <td>
                                            <a href="/Aksiyons/Edit/@item.ID" class="btn btn-default waves-effect waves-light" style="font-size:73%" >Düzenle</a>
                                            <a href="/Aksiyons/Details/@item.ID" class="btn btn-default waves-effect waves-light" style="font-size:73%" >Detay</a>
                                            <a href="/Aksiyons/Delete/@item.ID" class="btn btn-default waves-effect waves-light" style="font-size:73%" >Sil</a><br />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
