@model Crm_v10.Models.SatisElemanlari

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row col-sm-10">
            <h2>Satış Elemanları Tanıtım Kartı</h2>
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li>
                        <a href="#">Ayarlar</a>
                    </li>
                    <li>
                        <a href="/SatisElemanlaris/Index">Satış Elemanları Tanıtım Kartı</a>
                    </li>
                    <li>
                        <a href="#">Satış Elemanları Bilgilerini Düzenle</a>
                    </li>
                </ol>
            </div>
        </div>
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Kısayollar</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-lg-12" style="background-color:white">
                            <table class="table datatable table-striped table-bordered" id="kisayol">
                                <thead>
                                    <tr>
                                        <th>
                                            İşlevi
                                        </th>
                                        <th>
                                            Kısayolu
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Otomatik Satış Elemanları Kodu Tanımla</td>
                                        <td><kbd title="Satış Elemanları kodunu girerken otomatik tamamlamak için Shift ve F1'e basınız">Shift + F1</kbd></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" style="margin-top:20px" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row col-sm-2">
            <a href="#" class="col-lg-3 btn btn-default col-lg-push-9" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-info-sign"></i></a>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="card-box">
                    <h2>Düzenle</h2>
                    <h4 class="m-t-0 header-title">
                        <b>SATIŞ ELEMANLARI BİLGİLERİNİ DÜZENLE</b>
                    </h4>
                    <div class="form-horizontal">
                        <input type="hidden" id="sayfa" name="sayfa" value="SatisElemanlaris" />
                        <hr />
                        <div class="form-group">
                            <div class="col-md-7">
                                <span class="control-label">(*) Alanlar Zorunlu Alanlardır .</span>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                        <div class="form-group">
                            @Html.LabelFor(model => model.SatisElemaniKodu,"*Satış Elemanı Kodu" ,htmlAttributes: new { @class = "control-label col-md-4", @required = "" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.SatisElemaniKodu, new { htmlAttributes = new { @class = "form-control koduTamamla" } })
                                @Html.ValidationMessageFor(model => model.SatisElemaniKodu, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SatisElemaniAdiSoyadi,"*Ad Soyad", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.SatisElemaniAdiSoyadi, new { htmlAttributes = new { @class = "form-control harf", @maxlength = "100" } })
                                @Html.ValidationMessageFor(model => model.SatisElemaniAdiSoyadi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-actions no-color">
                            <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-default" /> |
                            @Html.ActionLink("Listeye Dön", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
