@model Crm_v10.Models.Kullanicilar

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row col-sm-10">
        <h2>Kullanıcı Tanıtım Kartı</h2>
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li>
                    <a href="#">Ayarlar</a>
                </li>
                <li>
                    <a href="/Kullanicilars/Index">Kullanıcı Tanıtım Kartı</a>
                </li>
                <li>
                    <a href="#">Kullanıcı Sil</a>
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="card-box">
                <h2>Sil</h2>
                <h4 class="m-t-0 header-title">
                    <b>KULLANICI SİL</b>
                </h4>
                <b>Bu Kayıtı Silmek İstediğinizden Emin misiniz?</b>
                <div class="form-horizontal">
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Kullanıcı Kodu :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.KullaniciKodu)
                        </dd>
                        <dt>
                            Kullanıcı Adı :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.KullaniciAdi)
                        </dd>
                        <dt>
                            Kullanıcı Şifresi :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.KullaniciSifresi)
                        </dd>
                        <dt>
                            Satış Elemanı :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SatisElemanlari.SatisElemaniAdiSoyadi)
                        </dd>
                    </dl>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Sil" class="btn btn-default" /> |
                            @Html.ActionLink("Listeye Dön", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
