
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    <div class="container">
        <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
        <!-- Page-Title -->
        <div class="row col-sm-10">
            <h2>Mail Gönderme Ayarları</h2>
            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li>
                        <a href="#">Ayarlar</a>
                    </li>
                    <li>
                        <a href="/MailGondermes/Index">Mail Gönderme Ayarları</a>
                    </li>
                </ol>
            </div>
        </div>
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Kısayollar</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-lg-12" style="background-color:white">
                            <table class="table datatable table-striped table-bordered" id="kisayol">
                                <thead>
                                    <tr>
                                        <th>
                                            İşlevi
                                        </th>
                                        <th>
                                            Kısayolu
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Şimdilik Kısayol Atanmamıştır</td>
                                        <td>@*<kbd title="Şimdilik Kısayol Atanmamıştır">Shift + F1</kbd>*@</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" style="margin-top:20px" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row col-sm-2">
            <a href="javascript;" class="col-lg-3 btn btn-default col-lg-push-9" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-info-sign"></i></a>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="row">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group col-lg-4 col-lg-push-1">
                                    <label class="col-md-12 control-label w3-left-align">Email</label>
                                    <div class="col-md-12">
                                        <input type="text" id="txtemail" name="txtemail" class="form-control" value="@ViewBag.Email" />
                                    </div>
                                </div>
                                <div class="form-group col-lg-4 col-lg-push-2">
                                    <label class="col-md-12 control-label w3-left-align">Şifre</label>
                                    <div class="col-md-12">
                                        <input type="password" id="txtsifre" name="txtsifre" class="form-control" required data-parsley-maxlength="25" value="@ViewBag.Sifre" />
                                    </div>
                                </div>
                                <div class="w3-col" style="margin-top: 20px">
                                    <input type="submit" value="Kaydet" class="col-lg-3 btn btn-default waves-light col-lg-push-4 w3-margin-top" />
                                </div>
                                <div class="col-sm-12">
                                    <span style="margin-left:35%">@ViewBag.Mesaj </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}