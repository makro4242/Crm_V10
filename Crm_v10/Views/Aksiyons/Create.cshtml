@model Crm_v10.Models.Aksiyon

@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="card-box">
                    <h2>Yeni Kayıt</h2>
                    <h4 class="m-t-0 header-title">
                        <b>AKSİYON EKLEME BİLGİLERİ YENİ KAYIT</b>
                    </h4>
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                      
                        <div class="form-group">
                            @Html.LabelFor(model => model.Saat,"Saat", htmlAttributes: new { @class = "control-label col-md-4", @required = "" })
                            <div class="col-md-7">
                                @Html.DropDownList("Saat", null, htmlAttributes: new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(model => model.Saat, "", new { @class = "text-danger" })
                              
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.GorevEklemeID, "Görev Açıklama", htmlAttributes: new { @class = "control-label col-md-4", @required = "" })
                            <div class="col-md-7">
                                @Html.DropDownList("GorevEklemeID", null, htmlAttributes: new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(model => model.GorevEklemeID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AksiyonSecim, "Tanımlanan Aksiyon", htmlAttributes: new { @class = "control-label col-md-4", @required = "" })
                            <div class="col-md-7">
                               @Html.DropDownList("AksiyonSecim", null, htmlAttributes: new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(model => model.AksiyonSecim, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AksiyonNot,"Aksiyon Not", htmlAttributes: new { @class = "control-label col-md-4", @required = "" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.AksiyonNot, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AksiyonNot, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Ekler,"Ekler", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7">
                                <input type="file" class="filestyle" data-size="sm">
                                @Html.ValidationMessageFor(model => model.Ekler, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-actions no-color">
                            <input type="submit" value="Kaydet" class="btn btn-default" /> |
                            @Html.ActionLink("Listeye Dön", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}