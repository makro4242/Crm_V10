@model Crm_v10.Models.Aksiyon

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="row col-sm-10">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li>
                    <a href="#">Evraklar</a>
                </li>
                <li>
                    <a href="/Aksiyons/Delete">Aksiyon Tanıtım Kartı</a>
                </li>
                <li>
                    <a href="#">Aksiyon Sil</a>
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="card-box">
                <h2>Sil</h2>
                <h4 class="m-t-0 header-title">
                    <b>AKSİYON  SİL</b>
                </h4>
               <b>Bu Kayıtı Silmek İstediğinizden Emin misiniz?</b>
                <div class="form-horizontal">
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                           Görev Açıklama :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Gorev.Aciklama)
                        </dd>

                        <dt>
                           Tarih :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Tarih)
                        </dd>

                        <dt>
                          Saat :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Saat)
                        </dd>

                        <dt>
                           Aksiyon :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AksiyonSecim.AksiyonAdi)
                        </dd>

                        <dt>
                           Aksiyon Not :
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AksiyonNot)
                        </dd>

                        <dt>
                           Ekler1 :
                        </dt>

                        <dd>
                            <a href="/Content/Ekler/@ViewBag.File1">@ViewBag.File1</a>
                        </dd>
                        <dt>
                            Ekler2 :
                        </dt>

                        <dd>
                            <a href="/Content/Ekler/@ViewBag.File2">@ViewBag.File2</a>
