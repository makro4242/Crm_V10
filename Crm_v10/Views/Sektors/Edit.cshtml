@model Crm_v10.Models.Sektor

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row col-sm-10">
            <h2>Sektör Tanıtım Kartı</h2>

            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li>
                        <a href="#">Ayarlar</a>
                    </li>
                    <li>
                        <a href="/Sektors/Index">Sektör Tanıtım Kartı</a>
                    </li>
                    <li>
                        <a href="#">Sektör Bilgilerini Düzenle</a>
                    </li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="card-box">
                    <h2>Düzenle</h2>
                    <h4 class="m-t-0 header-title">
                        <b>SEKTÖR BİLGİLERİNİ DÜZENLE</b>
                    </h4>
                    <div class="form-horizontal">
                        <hr />
                        <div class="form-group">
                            <div class="col-md-7">
                                <span class="control-label">(*) Alanlar Zorunlu Alanlardır .</span>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                        <div class="form-group">
                            @Html.LabelFor(model => model.SektorAd, "*Sektör Adı", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.SektorAd, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SektorAd, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-actions no-color">
                            <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-default" /> |
                            @Html.ActionLink("Listeye Dön", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
