@model Crm_v10.Models.Durum

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row col-sm-9">
            <h2>Durum</h2>

            <div class="col-sm-12">
                <ol class="breadcrumb">
                    <li>
                        <a href="#">Kartlar</a>
                    </li>
                    <li>
                        <a href="/Durums/Index">Durum Tanıtım Kartı</a>
                    </li>
                    <li>
                        <a href="#">Durum Bilgilerini Düzenle</a>
                    </li>
                </ol>
            </div>
        </div>
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Kısayollar</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-lg-12" style="background-color:white">
                            <table class="table datatable table-striped table-bordered" id="kisayol">
                                <thead>
                                    <tr>
                                        <th>
                                            İşlevi
                                        </th>
                                        <th>
                                            Kısayolu
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Şimdilik Kısayol Atanmamıştır</td>
                                        <td>@*<kbd title="Şimdilik Kısayol Atanmamıştır">Shift + F1</kbd>*@</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" style="margin-top:20px" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row col-sm-2">
            <a href="#" class="col-lg-3 btn btn-default col-lg-push-9" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-info-sign"></i></a>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="card-box">
                    <h2>Düzenle</h2>
                    <h4 class="m-t-0 header-title">
                        <b>DURUM BİLGİLERİNİ DÜZENLE</b>
                    </h4>
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                        <div class="form-group">
                            @Html.LabelFor(model => model.DurumAdi,"*Durum Adı", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.DurumAdi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DurumAdi, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-actions no-color">
                            <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-default" /> |
                            @Html.ActionLink("Listeye Dön", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
