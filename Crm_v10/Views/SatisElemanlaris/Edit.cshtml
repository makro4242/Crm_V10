@model Crm_v10.Models.SatisElemanlari

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-lg-10">
                <div class="card-box">
                    <h2>Düzenle</h2>
                    <h4 class="m-t-0 header-title">
                        <b>SATIŞ ELEMANLARI BİLGİLERİNİ DÜZENLE</b>
                    </h4>
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                        <div class="form-group">
                            @Html.LabelFor(model => model.SatisElemaniKodu,"Satış Elemanı Kodu" ,htmlAttributes: new { @class = "control-label col-md-2", @required = "" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SatisElemaniKodu, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SatisElemaniKodu, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SatisElemaniAdiSoyadi,"Ad Soyad", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SatisElemaniAdiSoyadi, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
                                @Html.ValidationMessageFor(model => model.SatisElemaniAdiSoyadi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-actions no-color">
                            <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-default" /> |
                            @Html.ActionLink("Listeye Dön", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
