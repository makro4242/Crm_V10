@model IEnumerable<Crm_v10.Models.SatisElemanlari>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Satış Elemanları</h2>

<p>
    <a href="/SatisElemanlaris/Create" class="btn btn-default waves-effect waves-light">Yeni Kayıt</a>
</p>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Liste</h4>
            <ol class="breadcrumb">
                <li>
                    <a href="#">Ana Sayfa</a>
                </li>
                <li>
                    <a href="#">Satış Elemanları</a>
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row"><th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 100.4px;">Kullancı Kodu</th><th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 389.4px;">Kullanıcı Adı</th><th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 100.4px;">İşlemler</th></tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr role="row" class="odd">
                                        <td class="sorting_1">
                                            @Html.DisplayFor(modelItem => item.SatisElemaniKodu)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SatisElemaniKodu)
                                        </td>
                                        <td>
                                            <a href="/SatisElemanlaris/Edit/@item.ID" class="btn btn-default waves-effect waves-light">Düzenle</a>
                                            <a href="/SatisElemanlaris/Details/@item.ID" class="btn btn-default waves-effect waves-light">Detay</a>
                                            <a href="/SatisElemanlaris/Delete/@item.ID" class="btn btn-default waves-effect waves-light">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
