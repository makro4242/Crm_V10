@model Crm_v10.Models.SatisElemanlari

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="card-box">
                    <h2>Yeni Kayıt</h2>
                    <h4 class="m-t-0 header-title">
                        <b>SATIŞ ELEMANLARI YENİ KAYIT</b>
                    </h4>
                    <div class="form-horizontal">
                        <input type="hidden" id="sayfa" name="sayfa" value="SatisElemanlaris" />
                        <hr />
                       En Son Eklenen Satş Elemanı Koduna göre Oluşacak Kodu görebilmek için Satış Elemanı Kodu Bölümüne Tıklayıp,<br /> Shift+F1 Tuşuna Basmanız Yeterli.<br /><br />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.SatisElemaniKodu,"Satış Elamanı Kodu", htmlAttributes: new { @class = "control-label col-md-4", @required = "" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.SatisElemaniKodu, new { htmlAttributes = new { @class = "form-control koduTamamla" } })
                                @Html.ValidationMessageFor(model => model.SatisElemaniKodu, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SatisElemaniAdiSoyadi, "Ad Soyad", htmlAttributes: new { @class = "control-label col-md-4", @required = "" })
                            <div class="col-md-7">
                                @Html.EditorFor(model => model.SatisElemaniAdiSoyadi, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
                                @Html.ValidationMessageFor(model => model.SatisElemaniAdiSoyadi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-actions no-color">
                            <input type="submit" value="Kaydet" class="btn btn-default" /> |
                            @Html.ActionLink("Listeye Dön", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}
