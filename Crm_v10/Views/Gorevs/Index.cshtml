@model IEnumerable<Crm_v10.Models.Gorev>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row col-sm-10">
        <h2>Görev</h2>
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li>
                    <a href="#">Evraklar</a>
                </li>
                <li>
                    <a href="/Gorevs/Index">Görev Tanıtım Kartı</a>
                </li>
                <li>
                    <a href="#">Index</a>
                </li>
            </ol>
        </div>
        <p>
            <a href="/Gorevs/Create" class="btn btn-default waves-effect waves-light">Yeni Kayıt</a>
        </p>

    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">Görev Kodu</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Potansiyel Unvani</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Satış Elemanı</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Tarih</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Tahmini Tutar</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Durum</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending">Öncelik</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 200.4px;">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Potansiyel.PotansiyelUnvani)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SatisElemanlari.SatisElemaniAdiSoyadi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tarih)
                                        </td>
                                        <td style="text-align:right">
                                            @Html.DisplayFor(modelItem => @item.TahminiTutar)
                                               
                                            
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Durum)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Oncelik)
                                        </td>
                                        <td>
                                            <a href="/Gorevs/Edit/@item.ID" class="btn btn-default waves-effect waves-light" style="font-size:73%" >Düzenle</a>
                                            <a href="/Gorevs/Details/@item.ID" class="btn btn-default waves-effect waves-light" style="font-size:73%">Detay</a>
                                            <a href="/Gorevs/Delete/@item.ID" class="btn btn-default waves-effect waves-light" style="font-size:73%" >Sil</a><br />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
